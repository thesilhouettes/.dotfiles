#! /bin/sh

LOCK="Lock ðŸ”’"
SUSPEND="Suspend ðŸ’¤"
SHUTDOWN="Shutdown ðŸ”Œ"
RESTART="Restart ðŸ’»"
LOGOUT="Logout ðŸ”‘"

chosen=$(printf "%s\n%s\n%s\n%s\n%s" "$LOCK" "$SUSPEND" "$SHUTDOWN" "$RESTART" "$LOGOUT" | rofi -p "Power" -dmenu)

case "$chosen" in
"$LOCK")
	betterlockscreen -l
	;;
"$SUSPEND")
	systemctl suspend
	;;
"$SHUTDOWN")
	shutdown now
	;;
"$RESTART")
	reboot
	;;
"$LOGOUT")
	bspc quit
	;;
*) ;;
esac
